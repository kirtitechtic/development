{%- case section.settings.section_layout -%}
{%- when '0' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '1' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true"{%- endcapture -%}
{%- when '2' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '3' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- endcase -%} 
<div data-section-id="{{ section.id }}" data-section-type="carousel-section">
  <div {{data_fullwidth}} class="vc_row wpb_row vc_row-fluid {% if section.settings.hide_background_mobile != blank %}mobile-bg-img-hidden{% endif %} vc_custom_{{section.id}} vc_row-has-fill woodmart-bg-center-center {% if section.settings.section_layout == '3' %}vc_row-no-padding{% endif %} woodmart-bg-left-top" style="margin-top:{{section.settings.margin_top | remove: 'px' | append: 'px' }}; margin-bottom:{{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.padding}};">
    <div class="wpb_column vc_column_container vc_col-sm-12 color-scheme-{{section.settings.section_content_color}}">
      <div class="vc_column-inner vc_custom_1491996091568">
        <div class="wpb_wrapper">
          <div class="title-wrapper woodmart-title-color-{{section.settings.heading_color}} woodmart-title-style-{{section.settings.heading_style}} woodmart-title-size-{{section.settings.heading_size}} woodmart-title-width-100 text-{{section.settings.heading_postion}} vc_custom_1491996655274">
            {%- if section.settings.heading_top != '' -%}
            <div class="title-subtitle font-default style-{{section.settings.heading_style}}">
              {%- if settings.language_enable -%}
              <span class="lang1">{{ section.settings.heading_top | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.heading_top | split: '|' | last }}</span>
              {%- else -%}
              {{ section.settings.heading_top | split: '|' | first }}
              {%- endif -%}
            </div>
            {%- endif -%} 
            {%- if section.settings.title != '' -%}
            <div class="liner-continer">
              <span class="left-line"></span>
              <h4 class="woodmart-title-container title  woodmart-font-weight-">
                {%- if settings.language_enable -%}
                <span class="lang1">{{ section.settings.title | split: '|' | first }}</span>
                <span class="lang2">{{ section.settings.title | split: '|' | last }}</span>
                {%- else -%}
                {{ section.settings.title | split: '|' | first }}
                {%- endif -%}
              </h4>
              <span class="right-line"></span>
            </div>
            {%- endif -%}
            {%- if section.settings.heading_content != '' -%}
            <div class="title-after_title">
              {%- if settings.language_enable -%}
              <span class="lang1">{{ section.settings.heading_content | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.heading_content | split: '|' | last }}</span>
              {%- else -%}
              {{ section.settings.heading_content | split: '|' | first }}
              {%- endif -%}
            </div>
            {%- endif -%}
            <style> 
              {%- if section.settings.heading_top == '' and section.settings.title == '' and section.settings.heading_content == '' -%}
              .vc_custom_{{section.id}} .title-wrapper {
                margin-bottom: 0;
              }
              {%- endif -%} 
            </style>
          </div>
          <div class="vc_icon_element vc_icon_element-outer vc_custom_1490712367243 vc_icon_element-align-center">
            <div class="vc_icon_element-inner vc_icon_element-color-white vc_icon_element-size-lg vc_icon_element-style- vc_icon_element-background-color-grey">
              <i class="icon-glyph51"></i>
            </div>
          </div>
          <div class="vc_row wpb_row vc_inner vc_row-fluid vc_custom_1493284041661">
            <div class="wpb_column vc_column_container vc_col-sm-12 vc_col-lg-offset-2 vc_col-lg-8 vc_col-md-offset-2 vc_col-md-8 vc_col-sm-offset-0 vc_col-xs-12">
              <div class="vc_column-inner">
                <div class="wpb_wrapper">
                  {%- if section.blocks.size > 0 -%}  
                  <div id="slide_{{section.id}}" class="testimonials-wrapper">
                    <div class="data-carousel" data-auto="{{ section.settings.autoplay }}" data-items="1" data-1200="1" data-992="1" data-768="1" data-480="1" data-320="1" data-paging="{{section.settings.pagination}}" data-nav="{{section.settings.navigation}}" data-margin="0" data-prev='' data-loop="{{section.settings.loop}}" data-next='' style="display: none;"></div>
                    <div class="testimonials testimonials-slider testimon-style-standard testimon-columns-3 testimon-align-center owl-carousel">
                      {%- for block in section.blocks -%} 
                      <div class="testimonial ">
                        <div class="testimonial-inner">
                          <div class="testimonial-avatar">
                            <img class="testimonial-avatar-image " src="{{block.settings.image | img_url: '70x70'}}" width="70" height="70">
                          </div>
                          <div class="testimonial-content">
                            {%- if settings.language_enable -%}
                            <div class="lang1">{{ block.settings.content | split: '[lang2]' | first }}</div>
                            <div class="lang2">{{ block.settings.content | split: '[lang2]' | last }}</div>
                            {%- else -%}
                            {{ block.settings.content | split: '[lang2]' | first }}
                            {%- endif -%} 
                            <footer>
                              {%- if settings.language_enable -%}
                              <div class="lang1">{{ block.settings.info | split: '[lang2]' | first }}</div>
                              <div class="lang2">{{ block.settings.info | split: '[lang2]' | last }}</div>
                              {%- else -%}
                              {{ block.settings.info | split: '[lang2]' | first }}
                              {%- endif -%}
                            </footer>
                          </div>
                        </div>
                      </div>
                      {%- endfor -%}
                    </div>
                  </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div> 
        </div>
      </div> 
    </div>
  </div>
  {%- if section.settings.section_layout != '0' -%}
  <div class="vc_row-full-width vc_clearfix"></div>
  {%- endif -%}
  <style>
    .vc_custom_{{section.id}} { 
      border-top-width: 0px !important; 
      {%- if section.settings.background_image != blank -%}
      background-image: url({{section.settings.background_image | img_url: 'master'}}) !important;
      background-position: {{section.settings.background_position | replace: '_', ' ' }} !important;
      background-repeat: {{section.settings.background_image_repeat}} !important;
      background-size: {{section.settings.background_size}} !important;
      background-attachment: {{section.settings.background_attachment}} !important;
      {%- endif -%}
      background-color: {{section.settings.background_color}};
    }  
    .vc_custom_1491996091568 {
      padding-top: 0px !important;
    }
    .vc_custom_1491996655274 {
      margin-bottom: 0px !important;
    }
    .vc_custom_1490712367243 {
      margin-bottom: 0px !important;
    }
    .vc_custom_1493284041661 {
      margin-bottom: 0px !important;
    }
    .vc_icon_element-align-center {
      text-align:center;
    }
    .vc_icon_element-align-center i {
      font-size:2.85em;
    }
  </style>
</div>
