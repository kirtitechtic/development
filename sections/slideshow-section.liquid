{%- case section.settings.section_layout -%}
{%- when '0' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '1' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '2' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '3' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '4' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- endcase -%} 
<div data-section-id="{{ section.id }}" data-section-type="slideshow-section"> 
  <div {{data_fullwidth}} class="vc_row wpb_row vc_row-fluid vc_custom_{{section.id}} vc_row-has-fill woodmart-bg-center-center {% if section.settings.section_layout != '0' %}vc_row-no-padding{% endif %} woodmart-bg-left-top" style="margin-top:{{section.settings.margin_top | remove: 'px' | append: 'px' }}; margin-bottom:{{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.padding}};">
    {%- if section.settings.section_layout == '1' -%}
    {% comment %}
    <div class="wpb_column vc_col-sm-3"><div class="vc_column-inner vc_custom_1497367543743"><div class="wpb_wrapper"></div></div></div>
   {% endcomment %}
    {%- endif -%}
    <div class="wpb_column {% if section.settings.section_layout != '1' %}vc_column_container{% endif %} vc_col-sm-12 {% if section.settings.section_layout == '1' %}vc_col-lg-12 vc_col-md-12{% endif %}">
      <div class="vc_column-inner vc_custom_1496220809434">
        <div class="wpb_wrapper">
          {%- if section.blocks.size > 0 -%}
          <div class="slideshow-background slideshow-section{% if section.settings.section_layout == '4' %} full-screen-slider{% endif %}">
            <div class="data-slideshow" data-auto="{{ section.settings.auto_speed }}" data-paging="{{ section.settings.show_paging }}" data-nav="{{ section.settings.show_nav }}" data-transition="{{ section.settings.slide_transition }}" data-loop="{{section.settings.slide_loop}}" data-dots="true" style="display: none;"></div>
            <div id="slideshow-section-{{ section.id }}" class="slideshow owl-carousel">
              {%- for block in section.blocks -%}
              {%- if block.settings.background_image != blank -%}
              {%- assign background_image = block.settings.background_image | img_url: 'master' -%}
              {%- else -%}
              {%- assign background_image = '1920x495.png' | asset_url -%}
              {%- endif -%}
              <div class="item" {% if block.settings.background_image_use == '1' %}style="background: url({{ background_image }}) {{block.settings.background_position | replace: '_', ' ' }} no-repeat;background-size: cover;"{%endif%} data-dot="<span>0{{forloop.index}}</span>">
                <div class="slide-inner"> 
                  {%- if section.settings.section_layout == '2' -%}
                  <div class="container" style="position:relative;">
                  {%- endif -%}
                    {%- if block.settings.image_use == '1' -%}
                      {%- if block.settings.image != blank -%}
                        {%- assign image_url = block.settings.image | img_url: 'master' -%}
                      {%- else %}
                        {%- assign image_url = '1192x495.png' | asset_url -%}
                      {%- endif -%}
                    {%- else%}
                      {%- assign image_url = 'bg_transparent.png' | asset_url -%}
                    {%- endif%}  
                    <img src="{{ image_url }}" {% if block.settings.background_image_use == '1' and block.settings.image_use != '1' %}class="bg-transparent"{% endif %}/> 
                    <div class="content_slideshow content-{{block.id}}">
                      <div class="row"> 
                        {%- if block.settings.content_pos == 'right' -%}
                        <div class="col-sm-{{ 12 | minus: block.settings.content_width }}"><div class="vc_column-inner vc_custom_1497367543743"><div class="wpb_wrapper"></div></div></div>
                        {%- endif -%}
                        <div class="col-sm-12 col-lg-{{block.settings.content_width}} col-md-{{block.settings.content_width}}">
                          <div class="vc_column-inner vc_custom_1496220809434">
                            <div class="wpb_wrapper" style="text-align: {{block.settings.content_align}};">
                              {%- if block.settings.content_top != '' -%}
                              <h5 style="color:{{block.settings.content_top_color}};">
                                {% if settings.language_enable %} 
                                <span class="lang1">{{ block.settings.content_top | split: '|' | first }}</span>
                                <span class="lang2">{{ block.settings.content_top | split: '|' | last }}</span> 
                                {% else %} 
                                {{ block.settings.content_top | split: '|' | first }} 
                                {% endif %}
                              </h5> 
                              {%- endif -%}
                              {%- if block.settings.title != '' -%}
                              <h4 style="color:{{block.settings.title_color}};">
                                {% if settings.language_enable %} 
                                <span class="lang1">{{ block.settings.title | split: '|' | first }}</span>
                                <span class="lang2">{{ block.settings.title | split: '|' | last }}</span> 
                                {% else %} 
                                {{ block.settings.title | split: '|' | first }} 
                                {% endif %}
                              </h4> 
                              {%- endif -%}
                              {%- if block.settings.content != '' -%}
                              <p class="content1" style="color:{{block.settings.content_color}};">
                                {% if settings.language_enable %} 
                                <span class="lang1">{{ block.settings.content | split: '[lang2]' | first }}</span>
                                <span class="lang2">{{ block.settings.content | split: '[lang2]' | last }}</span> 
                                {% else %} 
                                {{ block.settings.content | split: '[lang2]' | first }} 
                                {% endif %}  
                              </p>
                              {%- endif -%} 
                              {%- if block.settings.content_bottom != '' -%}
                              <p class="content2" style="color:{{block.settings.content_bottom_color}};">
                                {% if settings.language_enable %} 
                                <span class="lang1">{{ block.settings.content_bottom | split: '[lang2]' | first }}</span>
                                <span class="lang2">{{ block.settings.content_bottom | split: '[lang2]' | last }}</span> 
                                {% else %} 
                                {{ block.settings.content_bottom | split: '[lang2]' | first }} 
                                {% endif %}  
                              </p>
                              {%- endif -%}
                              {%- if block.settings.button_title != '' -%}
                              <a href="{{ block.settings.button_link }}" class="btn btn-style-{{block.settings.button_style}} btn-color-{{block.settings.button_color}} btn-size-{{block.settings.button_size}}">
                                {% if settings.language_enable %} 
                                <span class="lang1">{{ block.settings.button_title | split: '|' | first }}</span>
                                <span class="lang2">{{ block.settings.button_title | split: '|' | last }}</span> 
                                {% else %} 
                                {{ block.settings.button_title | split: '|' | first }} 
                                {% endif %}
                              </a>
                              {%- endif -%}
                              {%- if block.settings.button2_title != '' -%}
                              <a href="{{ block.settings.button2_link }}" class="btn btn-style-{{block.settings.button2_style}} btn-color-{{block.settings.button2_color}} btn-size-{{block.settings.button2_size}}" style="margin-left: 15px;">
                                {% if settings.language_enable %} 
