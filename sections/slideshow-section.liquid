                                <span class="lang2">{{ block.settings.button2_title | split: '|' | last }}</span> 
                                {% else %} 
                                {{ block.settings.button2_title | split: '|' | first }} 
                                {% endif %}
                              </a>
                              {%- endif -%}
                            </div>
                          </div>
                        </div>
                        {%- if block.settings.content_pos == 'left' -%}
                        <div class="col-sm-{{ 12 | minus: block.settings.content_width }}"><div class="vc_column-inner vc_custom_1497367543743"><div class="wpb_wrapper"></div></div></div>
                        {%- endif -%}
                      </div>
                    </div> 
                    <style>
                      .vc_custom_{{section.id}} .slideshow .content-{{block.id}} {
                        top:{{block.settings.content_pos_top | remove: '%' | append: '%'}};
                        left:3%;
                      }
                      @media(min-width:768px){
                        .vc_custom_{{section.id}} .slideshow .content-{{block.id}} {
                          left:{{block.settings.content_pos_left | remove: '%' | append: '%'}};
                        }
                      }
                    </style>
                  {%- if section.settings.section_layout == '2' -%}
                  </div>
                  {%- endif -%}
                </div> 
              </div>
              {%- endfor -%}
            </div>
          </div>
          {%- endif -%}
        </div>
