{%- case section.settings.section_layout -%}
{%- when '0' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '1' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true"{%- endcapture -%}
{%- when '2' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '3' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- endcase -%} 
<div data-section-id="{{ section.id }}" data-section-type="newsletter-section">
  <div {{data_fullwidth}} class="vc_row wpb_row vc_row-fluid {% if section.settings.hide_background_mobile != blank %}mobile-bg-img-hidden{% endif %} vc_custom_{{section.id}} vc_row-has-fill {% if section.settings.section_layout == '3' %}vc_row-no-padding{% endif %} woodmart-bg-left-top" style="margin-top:{{section.settings.margin_top | remove: 'px' | append: 'px' }}; margin-bottom:{{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.padding}};">
    <div class="text-center wpb_column vc_col-sm-12 vc_col-md-5 vc_col-xs-12">
      <div class="vc_column-inner vc_custom_1497429824807">
        <div class="wpb_wrapper">
          <div class="title-wrapper woodmart-title-color-{{section.settings.title_color}} woodmart-title-style-{{section.settings.title_style}} woodmart-title-size-{{section.settings.title_size}} woodmart-title-width-100 text-{{section.settings.title_postion}} vc_custom_1497429840108">
            {%- if section.settings.sub_title != '' -%}
            <div class="title-subtitle  font-default style-default">
              <strong>
                {%- if settings.language_enable -%}
                <span class="lang1">{{ section.settings.sub_title | split: '|' | first }}</span>
                <span class="lang2">{{ section.settings.sub_title | split: '|' | last }}</span>
                {%- else -%}
                {{ section.settings.sub_title | split: '|' | first }}
                {%- endif -%}
              </strong>
            </div>
            {%- endif -%}
            {%- if section.settings.title != '' -%}
            <div class="liner-continer">
              <span class="left-line"></span>
              <h4 class="woodmart-title-container title  woodmart-font-weight-">
                {%- if settings.language_enable -%}
                <span class="lang1">{{ section.settings.title | split: '|' | first }}</span>
                <span class="lang2">{{ section.settings.title | split: '|' | last }}</span>
                {%- else -%}
                {{ section.settings.title | split: '|' | first }}
                {%- endif -%}
              </h4>
              <span class="right-line"></span>
            </div>
            {%- endif -%}
          </div>
          {%- if section.settings.button_title_1 != '' -%}
          <div class="woodmart-button-wrapper text-center btn-inline">
            <a href="{{section.settings.button_link_1}}" title="" class="btn btn-color-{{section.settings.button_color_1}} btn-style-{{section.settings.button_style_1}} btn-size-{{section.settings.button_size_1}}">
              {%- if settings.language_enable -%}
              <span class="lang1">{{ section.settings.button_title_1 | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.button_title_1 | split: '|' | last }}</span>
              {%- else -%}
              {{ section.settings.button_title_1 | split: '|' | first }}
              {%- endif -%}
            </a>
          </div>
          {%- endif -%}
          {%- if section.settings.button_title_2 != '' -%}
          <div class="woodmart-button-wrapper text-center btn-inline">
            <a href="{{section.settings.button_link_2}}" title="" class="btn btn-color-{{section.settings.button_color_2}} btn-style-{{section.settings.button_style_2}} btn-size-{{section.settings.button_size_2}}">
