          <div class="wpb_single_image wpb_content_element vc_align_center vc_custom_1497428495389">
            <figure class="wpb_wrapper vc_figure">
              <div class="vc_single_image-wrapper vc_box_border_grey">
                {%- if section.settings.content_image != blank -%}
                {%- assign img_url = section.settings.content_image | img_url: '703x268' -%}
                {%- else -%}
