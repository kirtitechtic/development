              {%- else -%}
              {{ section.settings.button_title_2 | split: '|' | first }}
              {%- endif -%}
            </a>
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
    <div class="wpb_column vc_col-sm-12 vc_col-md-7 vc_col-xs-12">
      <div class="vc_column-inner vc_custom_1497428452356">
        <div class="wpb_wrapper">
