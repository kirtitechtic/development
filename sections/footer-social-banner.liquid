{%- case section.settings.section_layout -%}
{%- when '0' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '1' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true"{%- endcapture -%}
{%- when '2' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '3' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- endcase -%} 
<div data-section-id="{{ section.id }}" data-section-type="text-section">
  <div {{data_fullwidth}} class="vc_row-flex text-section spb_column {% if section.settings.hide_background_mobile != blank %}mobile-bg-img-hidden{% endif %} vc_custom_{{section.id}} vc_row {% if section.settings.section_layout == '3' %}vc_row-no-padding{% endif %}"  style="margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.padding}};">
    <div class="wpb_column vc_column_container vc_col-sm-12">
      <div class="vc_column-inner">
        <div class="wpb_wrapper">
          <div class="vc_row wpb_row vc_row-fluid vc_row-has-fill vc_row-o-content-top vc_row-flex">
            {%- if section.blocks.size > 0 -%}  
            {%- for block in section.blocks -%}
            {%- case block.type -%}
            {%- when 'banner' -%}
            <div class="wpb_column vc_column_container vc_col-xs-{{block.settings.item_width_phone}} vc_col-sm-{{block.settings.item_width_tablet}} vc_col-lg-{{block.settings.item_width}} vc_col-md-{{block.settings.item_width_tablet}} vc_col-has-fill">
              <div class="vc_column-inner vc_custom_{{block.id}} {% if forloop.last %}last{% endif %}">
                <div class="wpb_wrapper"> 
                  {%- if block.settings.title != '' -%}
                  <div id="sp-{{block.id}}" class="woodmart-text-block-wrapper color-scheme-{{block.settings.content_color}} woodmart-title-size-{{block.settings.title_size}} woodmart-title-width-{{block.settings.content_width}} text-{{block.settings.content_text_align}} vc_custom_{{block.id}}2">
                    <div class="woodmart-title-container woodmart-text-block font-primary woodmart-font-weight-{{block.settings.title_font_weight}}">
                      {%- if settings.language_enable -%}
                      <span class="lang1">{{ block.settings.title | split: '|' | first }}</span>
                      <span class="lang2">{{ block.settings.title | split: '|' | last }}</span>
                      {%- else -%}
                      {{ block.settings.title | split: '|' | first }}
                      {%- endif -%}
                    </div>
                    {%- if block.settings.title_size == 'custom' -%}
                    <style>
                      #sp-{{block.id}} .woodmart-text-block{font-size:{{block.settings.title_custom_size | remove: 'px' | append: 'px'}};line-height:{{block.settings.title_custom_size | remove: 'px'  | plus: 10 | append: 'px'}};}
                      {%- if block.settings.title_custom_size_tablet != '' -%}
                      @media(max-width: 991px){
                        #sp-{{block.id}} .woodmart-text-block{font-size:{{block.settings.title_custom_size_tablet | remove: 'px' | append: 'px'}};line-height:{{block.settings.title_custom_size_tablet | remove: 'px'  | plus: 10 | append: 'px'}};}
                      }
                      {%- endif -%}
                      {%- if block.settings.title_custom_size_phone != '' -%}
                      @media(max-width: 767px){
                        #sp-{{block.id}} .woodmart-text-block{font-size:{{block.settings.title_custom_size_phone | remove: 'px' | append: 'px'}};line-height:{{block.settings.title_custom_size_phone | remove: 'px'  | plus: 10 | append: 'px'}};}
                      }
