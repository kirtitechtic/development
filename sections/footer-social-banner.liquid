                        {%- endif -%}
                        <img src="{{ img_url }}" alt="{{ block.settings.image.alt }}" class="woodmart-gallery-image image-1 attachment-full"/> 
                      </div>
                    </div>
                  </div>
                </div>
              </div> 
            </div> 
