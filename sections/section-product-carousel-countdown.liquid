                      <span class="lang2">{{ block.settings.title | split: '|' | last }}</span>
                      {%- else -%}
                      {{ block.settings.title | split: '|' | first }}
                      {%- endif -%}
                    </div>
                    {%- if block.settings.title_size == 'custom' -%}
                    <style>
                      #sp-{{block.id}} .woodmart-text-block{
                        font-size: {{block.settings.title_custom_size | remove: 'px' | append: 'px'}};
                        line-height: {{block.settings.title_custom_size | remove: 'px' | plus: 10 | append: 'px'}};
                        {%- if block.settings.title_color == 'custom' -%}
                        color: {{block.settings.title_custom_color}};
                        {%- endif -%}
                      }
                      @media(max-width: 991px){
                        #sp-{{block.id}} .woodmart-text-block{
                          font-size: {{block.settings.title_custom_size_tablet | remove: 'px' | append: 'px'}};
                          line-height: {{block.settings.title_custom_size_tablet | remove: 'px' | plus: 10 | append: 'px'}};
                        }
                      }
                      @media(max-width: 767px){
                        #sp-{{block.id}} .woodmart-text-block{
                          font-size: {{block.settings.title_custom_size_phone | remove: 'px' | append: 'px'}};
                          line-height: {{block.settings.title_custom_size_phone | remove: 'px' | plus: 10 | append: 'px'}};
                        }
                      }
                    </style>
                    {%- endif -%} 
                  </div>
                  <div id="sp-{{block.id}}2" class="woodmart-text-block-wrapper color-scheme-{{block.settings.title2_color}} woodmart-title-size-{{block.settings.title2_size}} woodmart-title-width-{{block.settings.title2_width}} text-{{block.settings.title2_postion}} vc_custom_{{block.id}}3">
                    <div class="woodmart-title-container woodmart-text-block font-primary woodmart-font-weight-{{block.settings.title2_font_weight}}">
                      {%- if settings.language_enable -%}
                      <span class="lang1">{{ block.settings.title2 | split: '|' | first }}</span>
                      <span class="lang2">{{ block.settings.title2 | split: '|' | last }}</span>
                      {%- else -%}
                      {{ block.settings.title2 | split: '|' | first }}
                      {%- endif -%}
                    </div>
                    {%- if block.settings.title2_size == 'custom' -%}
                    <style>
                      #sp-{{block.id}}2 .woodmart-text-block{
                        font-size: {{block.settings.title2_custom_size | remove: 'px' | append: 'px'}};
                        line-height: {{block.settings.title2_custom_size | remove: 'px' | plus: 10 | append: 'px'}};
                        {%- if block.settings.title2_color == 'custom' -%}
