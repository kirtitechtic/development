                        #sp-{{block.id}}2 .woodmart-text-block{
                          font-size: {{block.settings.title2_custom_size_phone | remove: 'px' | append: 'px'}};
                          line-height: {{block.settings.title2_custom_size_phone | remove: 'px' | plus: 10 | append: 'px'}};
                        }
