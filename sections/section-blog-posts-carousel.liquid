                    {%- include pl_include, aspect_ratio: section.settings.blog_aspect_ratio -%}
                    </article>
                  </div>
                </div>
                {%- endfor -%}
              </div>
            </div> 
            {%- endunless-%}
          </div>
        </div>
      </div>
    </div>
    {%- if section.settings.section_layout != '0' -%}
    <div class="vc_row-full-width vc_clearfix"></div>
    {%- endif -%}
    <style>
