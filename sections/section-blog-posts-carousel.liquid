{%- case section.settings.section_layout -%}
{%- when '0' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '1' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true"{%- endcapture -%}
{%- when '2' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '3' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- endcase -%} 
{%- case section.settings.blog_design -%}
{%- when 'default-alt' -%}
{%- assign pl_include = 'blog-design-default-alt' -%} 
{%- when 'small-images' -%}
{%- assign pl_include = 'blog-design-small-images' -%}
{%- when 'chess' -%}
{%- assign pl_include = 'blog-design-chess' -%}
{%- when 'masonry' -%}
{%- assign pl_include = 'blog-design-masonry' -%}
{%- when 'default' -%}
{%- assign pl_include = 'blog-design-default' -%}
{%- endcase -%} 
{%- case section.settings.blog_aspect_ratio -%}
{%- when '1' -%}
  {%- assign image_width = section.settings.blog_ratio_width | remove: 'px' -%}
  {%- assign image_height = '' -%} 
{%- else -%}
  {%- assign image_width = section.settings.blog_ratio_width | remove: 'px' -%}
  {%- assign image_height = section.settings.blog_ratio_height | remove: 'px' -%}
{%- endcase -%}  
{%- capture image_size -%}{{ image_width }}x{{ image_height }}{%- endcapture -%}
<div class="blog-posts" data-section-id="{{ section.id }}" data-section-type="carousel-section">
  <div id="blog-posts-{{section.id}}">
    <div {{data_fullwidth}} class="vc_row wpb_row vc_row-fluid {% if section.settings.hide_background_mobile != blank %}mobile-bg-img-hidden{% endif %} vc_custom_{{ section.id }} {% if section.settings.section_layout == '3' %}vc_row-no-padding{% endif %}" style="margin-top:{{section.settings.margin_top | remove: 'px' | append: 'px' }}; margin-bottom:{{section.settings.margin_bottom | remove: 'px' | append: 'px' }}; padding: {{section.settings.section_padding}};">
