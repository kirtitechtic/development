{%- case section.settings.section_layout -%}
{%- when '0' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '1' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true"{%- endcapture -%}
{%- when '2' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '3' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- endcase -%} 
<div data-section-id="{{ section.id }}" data-section-type="video-poster-section">
  <div {{data_fullwidth}} class="vc_row wpb_row vc_row-fluid {% if section.settings.hide_background_mobile != blank %}mobile-bg-img-hidden{% endif %} vc_custom_{{section.id}} {% if section.settings.section_layout == '3' %}vc_row-no-padding{% endif %}"  style="margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.padding}};">
    <div id="video_poster_{{section.id}}" class="wpb_column vc_column_container vc_col-sm-12">
      <div class="vc_column-inner vc_custom_1488538101973">
        <div class="wpb_wrapper">
          <div class="title-wrapper woodmart-title-color-{{section.settings.heading_color}} woodmart-title-style-{{section.settings.heading_style}} woodmart-title-size-{{section.settings.heading_size}} woodmart-title-width-100 text-{{section.settings.heading_postion}}">
            {%- if section.settings.heading_top != '' -%}
            <div class="title-subtitle font-default style-{{section.settings.heading_style}}">
              {%- if settings.language_enable -%}
              <span class="lang1">{{ section.settings.heading_top | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.heading_top | split: '|' | last }}</span>
              {%- else -%}
              {{ section.settings.heading_top | split: '|' | first }}
              {%- endif -%}
            </div>
            {%- endif -%} 
            {%- if section.settings.title != '' -%}
            <div class="liner-continer">
              <span class="left-line"></span>
              <h4 class="woodmart-title-container title  woodmart-font-weight-">
                {%- if settings.language_enable -%}
                <span class="lang1">{{ section.settings.title | split: '|' | first }}</span>
                <span class="lang2">{{ section.settings.title | split: '|' | last }}</span>
                {%- else -%}
                {{ section.settings.title | split: '|' | first }}
                {%- endif -%}
              </h4>
              <span class="right-line"></span>
            </div>
            {%- endif -%}
            {%- if section.settings.heading_content != '' -%}
            <div class="title-after_title">
              {%- if settings.language_enable -%}
              <span class="lang1">{{ section.settings.heading_content | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.heading_content | split: '|' | last }}</span>
              {%- else -%}
              {{ section.settings.heading_content | split: '|' | first }}
              {%- endif -%}
            </div>
            {%- endif -%}
            <style> 
              {%- if section.settings.heading_top == '' and section.settings.title == '' and section.settings.heading_content == '' -%}
              .vc_custom_{{section.id}} .title-wrapper {
                margin-bottom: 0;
              }
              {%- endif -%} 
            </style>
          </div>
          {%- if section.blocks.size > 0 -%} 
          <div class="vc_row wpb_row vc_inner vc_row-fluid vc_custom_1497433701576 vc_row-o-content-middle vc_row-flex">
            {%- if section.settings.video_enable != blank -%} 
              {%- capture class_video -%}vc_col-sm-6{%- endcapture -%}
              {%- capture class_brands -%}vc_col-sm-6{%- endcapture -%}  
            {%- else -%}
              {%- capture class_brands -%}vc_col-sm-12{%- endcapture -%}
            {%- endif -%} 
            {%- if section.settings.video_enable != blank -%} 
            <div class="wpb_column vc_column_container {{class_video}}">
              <div class="vc_column-inner vc_custom_1497433683063">
                <div class="wpb_wrapper">
                  <div class="wpb_video_widget wpb_content_element vc_clearfix   vc_custom_1497433694104 vc_video-aspect-ratio-169 vc_video-el-width-100 vc_video-align-left">
                    <div class="wpb_wrapper">
                      <div class="wpb_video_wrapper">
                        <div class="woodmart-video-poster-wrapper">
                          {%- if section.settings.video_thumb != blank -%}
                          {%- assign thumb_url = section.settings.video_thumb | img_url: '725x408' -%}
                          {%- else -%}
                          {%- assign thumb_url = '725x408.png' | asset_url -%}
                          {%- endif -%}
                          <div class="woodmart-video-poster" style="background-image:url({{ thumb_url }});"></div>
                          <div class="button-play"></div>
                        </div>
                        <iframe src="{{section.settings.video_url}}" width="500" height="281" frameborder="0" webkitallowfullscreen="" mozallowfullscreen="" allowfullscreen=""></iframe>
                      </div> 
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {%- endif -%}
            <div class="wpb_column vc_column_container {{class_brands}}">
              <div class="vc_column-inner vc_custom_1497433688310">
                <div class="wpb_wrapper">
                  <div id="brands_{{section.id}}" class="brands-widget slider-brands_{{section.id}} brands-grid brands-hover-{{section.settings.brand_hover}} brands-columns-{{section.settings.brand_columns}} brands-style-bordered">
                    <div class="brands-items-wrapper">
                      {%- for block in section.blocks -%}
                      <div class="brand-item">
                        <a href="{{ block.settings.link }}">
                          {%- if block.settings.image != blank -%}
                          {%- assign img_url = block.settings.image | img_url: '180x100' -%}
                          {%- else -%}
                          {%- assign img_url = '180x100.png' | asset_url -%}
                          {%- endif -%}
                          <img src="{{ img_url }}" alt="{{ block.settings.image.alt }}"/>
                        </a>
                      </div>
                      {%- endfor -%}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {%- endif -%}
        </div>
        <style>
          .vc_custom_1497433683063 {
            margin-bottom: 25px !important;
            padding-top: 0px !important;
          }
          .vc_custom_1497433688310 {
            margin-bottom: 25px !important;
            padding-top: 0px !important;
          }
        </style>
      </div>
    </div>
  </div>
  {%- if section.settings.section_layout != '0' -%}
  <div class="vc_row-full-width vc_clearfix"></div>
  {%- endif -%} 
  <style>
    .vc_custom_{{section.id}} { 
      border-top-width: 0px !important; 
      {%- if section.settings.background_image != blank -%}
      background-image: url({{section.settings.background_image | img_url: 'master'}}) !important;
      background-position: {{section.settings.background_position | replace: '_', ' ' }} !important;
      background-repeat: {{section.settings.background_image_repeat}} !important;
      background-size: {{section.settings.background_size}} !important;
      background-attachment: {{section.settings.background_attachment}} !important;
      {%- endif -%}
      background-color: {{section.settings.background_color}};
    }  
  </style>
</div>
