                      {%- if settings.language_enable -%}
                      <span class="lang1">{{ block.settings.sub_title | split: '|' | first }}</span>
                      <span class="lang2">{{ block.settings.sub_title | split: '|' | last }}</span>
                      {%- else -%}
                      {{ block.settings.sub_title | split: '|' | first }}
                      {%- endif -%} 
                    </div>
                    {%- endif -%}
                    <div class="liner-continer">
                      <span class="left-line"></span> 
                      {%- if block.settings.title != '' -%}
                      <h4 class="woodmart-title-container title woodmart-font-weight-{{block.settings.title_font_weight}}">
                        {%- if settings.language_enable -%}
                        <span class="lang1">{{ block.settings.title | split: '|' | first }}</span>
                        <span class="lang2">{{ block.settings.title | split: '|' | last }}</span>
                        {%- else -%}
                        {{ block.settings.title | split: '|' | first }}
                        {%- endif -%}
                      </h4>
                      {%- endif -%}
                      <span class="right-line"></span>
                    </div>
                    {%- if block.settings.title_size == 'custom' -%}
                    <style>#woodmart-title-id-{{ block.id }} .woodmart-title-container{font-size:{{block.settings.title_size_custom_desktop | remove: 'px' | append: 'px'}};line-height:{{block.settings.title_size_custom_desktop | remove: 'px' | plus: 10 | append: 'px'}};}{% if block.settings.title_size_custom_tablet != '' %}@media (max-width: 1024px){#woodmart-title-id-{{ block.id }} .woodmart-title-container{font-size:{{block.settings.title_size_custom_tablet | remove: 'px' | append: 'px'}};line-height:{{block.settings.title_size_custom_tablet | remove: 'px' | plus: 10 | append: 'px'}};}{% endif %}{% if block.settings.title_size_custom_mobile != '' %}@media (max-width: 767px){#woodmart-title-id-{{ block.id }} .woodmart-title-container{font-size:{{block.settings.title_size_custom_mobile | remove: 'px' | append: 'px'}};line-height:{{block.settings.title_size_custom_mobile | remove: 'px' | plus: 10 | append: 'px'}};}{% endif %}</style>
