{%- case section.settings.section_layout -%}
{%- when '0' -%}
{%- capture data_fullwidth -%}{%- endcapture -%}
{%- when '1' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true"{%- endcapture -%}
{%- when '2' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- when '3' -%}
{%- capture data_fullwidth -%}data-vc-full-width="true" data-vc-full-width-init="true" data-vc-stretch-content="true"{%- endcapture -%}
{%- endcase -%} 
<div data-section-id="{{ section.id }}" data-section-type="carousel-section">
  <div {{data_fullwidth}} class="vc_row wpb_row vc_row-fluid {% if section.settings.hide_background_mobile != blank %}mobile-bg-img-hidden{% endif %} vc_custom_{{section.id}} {% if section.settings.section_layout == '3' %}vc_row-no-padding{% endif %}"  style="margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.padding}};">
    {{section.settings.background_gradient_color}}
    <div class="wpb_column vc_column_container vc_col-sm-12">
      <div class="vc_column-inner">
        <div class="wpb_wrapper">
          <div id="sp-{{section.id}}" class="title-wrapper woodmart-title-color-{{section.settings.heading_color}} woodmart-title-style-{{section.settings.heading_style}} woodmart-title-size-{{section.settings.heading_size}} woodmart-title-width-{{section.settings.heading_width}} text-{{section.settings.heading_postion}}">
            {%- if section.settings.heading_top != '' -%}
            <div class="title-subtitle font-default style-{{section.settings.heading_style}}">
              {%- if settings.language_enable -%}
              <span class="lang1">{{ section.settings.heading_top | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.heading_top | split: '|' | last }}</span>
              {%- else -%}
              {{ section.settings.heading_top | split: '|' | first }}
              {%- endif -%}
            </div>
            {%- endif -%} 
            {%- if section.settings.title != '' -%}
            <div class="liner-continer">
              <span class="left-line"></span>
              <h4 class="woodmart-title-container title  woodmart-font-weight-">
                {%- if settings.language_enable -%}
                <span class="lang1">{{ section.settings.title | split: '|' | first }}</span>
                <span class="lang2">{{ section.settings.title | split: '|' | last }}</span>
                {%- else -%}
                {{ section.section.title | split: '|' | first }}
                {%- endif -%}
              </h4>
              <span class="right-line"></span>
            </div>
            {%- endif -%}
            {%- if section.settings.heading_content != '' -%}
            <div class="title-after_title">
              {%- if settings.language_enable -%}
              <span class="lang1">{{ section.settings.heading_content | split: '|' | first }}</span>
              <span class="lang2">{{ section.settings.heading_content | split: '|' | last }}</span>
              {%- else -%}
              {{ section.settings.heading_content | split: '|' | first }}
              {%- endif -%}
            </div>
            {%- endif -%}
            <style> 
              {%- if section.settings.heading_top == '' and section.settings.title == '' and section.settings.heading_content == '' -%}
              .vc_custom_{{section.id}} .title-wrapper {
                margin-bottom: 0;
              }
              {%- endif -%} 
              {%- if section.settings.heading_size == 'custom' and section.settings.heading_custom_size != blank -%}
              #sp-{{section.id}} .woodmart-title-container {
                font-size: {{section.settings.heading_custom_size | remove: 'px' | append: 'px' }};
                line-height: {{section.settings.heading_custom_size | remove: 'px' | plus: 10 | append: 'px' }};
              }
              {%- endif-%}
              {%- if section.settings.heading_size == 'custom' and section.settings.heading_custom_size_tablet != blank -%}
              @media(max-width: 1024px){
                #sp-{{section.id}} .woodmart-title-container {
                  font-size: {{section.settings.heading_custom_size_tablet | remove: 'px' | append: 'px' }};
                  line-height: {{section.settings.heading_custom_size_tablet | remove: 'px' | plus: 10 | append: 'px' }};
                }
              } 
              {%- endif-%}
              {%- if section.settings.heading_size == 'custom' and section.settings.heading_custom_size_phone != blank -%}
              @media(max-width: 767px){
                #sp-{{section.id}} .woodmart-title-container {
                  font-size: {{section.settings.heading_custom_size_phone | remove: 'px' | append: 'px' }};
                  line-height: {{section.settings.heading_custom_size_phone | remove: 'px' | plus: 10 | append: 'px' }};
                }
              } 
              {%- endif-%}
              {%- if section.settings.heading_size == 'custom' and section.settings.heading_top_custom_size != blank -%}
              #sp-{{section.id}} .title-subtitle {
                font-size: {{section.settings.heading_top_custom_size | remove: 'px' | append: 'px' }};
                line-height: {{section.settings.heading_top_custom_size | remove: 'px' | plus: 10 | append: 'px' }};
              }
              {%- endif-%}
              {%- if section.settings.heading_size == 'custom' and section.settings.heading_top_custom_size_tablet != blank -%}
              @media(max-width: 1024px){
                #sp-{{section.id}} .title-subtitle {
                  font-size: {{section.settings.heading_top_custom_size_tablet | remove: 'px' | append: 'px' }};
                  line-height: {{section.settings.heading_top_custom_size_tablet | remove: 'px' | plus: 10 | append: 'px' }};
                }
              } 
              {%- endif-%}
              {%- if section.settings.heading_size == 'custom' and section.settings.heading_top_custom_size_phone != blank -%}
              @media(max-width: 767px){
                #sp-{{section.id}} .title-subtitle {
                  font-size: {{section.settings.heading_top_custom_size_phone | remove: 'px' | append: 'px' }};
                  line-height: {{section.settings.heading_top_custom_size_phone | remove: 'px' | plus: 10 | append: 'px' }};
                }
              } 
              {%- endif-%}
            </style>
          </div> 
          {%- if section.blocks.size > 0 -%}  
          <div id="slide_{{section.id}}" class="woodmart-carousel-container info-box-carousel-wrapper  woodmart-carousel-spacing-{{section.settings.carousel_column_spacing}}">
            <div class="data-carousel" data-items="{{ section.settings.carousel_column_desktop }}" data-auto="{{ section.settings.carousel_autoplay }}" data-paging="{{ section.settings.carousel_pagination }}" data-loop="{{section.settings.carousel_loop}}" data-320="{{section.settings.carousel_column_mobile}}" data-480="{{section.settings.carousel_column_mobile}}" data-768="{{section.settings.carousel_column_tablet}}" data-992="{{section.settings.carousel_column_tablet}}" data-1200="{{ section.settings.carousel_column_desktop }}" data-margin="0" data-nav="{{ section.settings.carousel_navigation }}" data-prev='' data-next='' style="display: none;"></div>
            <div class="owl-carousel info-box-carousel">
            {%- for block in section.blocks -%}  
            <div class="info-box-wrapper {{block.settings.extra_class}}">
              <div id="infobox-{{block.id}}" class="woodmart-info-box with-btn btn-position-{{block.settings.button_position}}  text-{{block.settings.text_alignment}} box-title-{{block.settings.title_size}} icon-alignment-{{block.settings.image_alignment}} box-{{block.settings.box_style}} color-scheme-{{block.settings.color_scheme}}{% if block.settings.box_style == 'bg-hover'%} hover-color-scheme-{{block.settings.color_scheme_hover}}{% endif %} woodmart-bg-none vc_custom_{{block.id}}5">
                <div class="box-icon-wrapper with-{{block.settings.icon_type}}{% if block.settings.icon_type == 'text' %} text-size-{{block.settings.icon_text_size}}{% endif %} icon-style-{{block.settings.icon_style}}">
                  <div class="info-box-icon"> 
                    {%- if block.settings.icon_type == 'text' -%}
                    {{block.settings.icon_text}}
                    {%- endif -%}
                    {%- if block.settings.icon_type == 'icon' -%}
                    {%- if block.settings.icon_svg_code != '' -%}
                    {{block.settings.icon_svg_code}}
                    {%- else -%} 
                    {%- if block.settings.icon_image != blank -%}
                    <img src="{{block.settings.icon_image | img_url: 'master'}}" /> 
                    {%- endif -%}
                    {%- endif -%}
                    {%- endif -%}
                  </div> 
                </div>
                <div class="info-box-content">
                  {%- if block.settings.sub_title != '' -%}
                  <div class="info-box-subtitle subtitle-style-{{block.settings.subtitle_style}} subtitle-color-{{block.settings.subtitle_color}}">
                    {%- if settings.language_enable -%}
                    <span class="lang1">{{ block.settings.sub_title | split: '|' | first }}</span>
                    <span class="lang2">{{ block.settings.sub_title | split: '|' | last }}</span>
                    {%- else -%}
                    {{ block.settings.sub_title | split: '|' | first }}
                    {%- endif -%}
                  </div>
                  {%- endif -%}
                  {%- if block.settings.title != '' -%}
                  <h4 class="info-box-title">
                    {%- if settings.language_enable -%}
                    <span class="lang1">{{ block.settings.title | split: '|' | first }}</span>
                    <span class="lang2">{{ block.settings.title | split: '|' | last }}</span>
                    {%- else -%}
                    {{ block.settings.title | split: '|' | first }}
                    {%- endif -%}
                  </h4>
                  {%- endif -%}
                  {%- if block.settings.content != '' -%}
                  <div class="info-box-inner">
                    {%- if settings.language_enable -%}
                    <div class="lang1">{{ block.settings.content | split: '[lang2]' | first }}</div>
                    <div class="lang2">{{ block.settings.content | split: '[lang2]' | last }}</div>
                    {%- else -%}
                    {{ block.settings.content | split: '[lang2]' | first }}
                    {%- endif -%}
                  </div>
                  {%- endif -%}
                  {%- if block.settings.button_title != '' -%}
                  <div class="info-btn-wrapper">
                    <div class="woodmart-button-wrapper text-{{block.settings.content_text_align}}">
                      <a class="btn btn-color-{{block.settings.button_color}} btn-scheme-light btn-scheme-hover-light btn-style-{{block.settings.button_style}} btn-shape-rectangle btn-size-{{block.settings.button_size }}">
                        {%- if settings.language_enable -%}
                        <span class="lang1">{{ block.settings.button_title | split: '|' | first }}</span>
                        <span class="lang2">{{ block.settings.button_title | split: '|' | last }}</span>
                        {%- else -%}
                        {{ block.settings.button_title | split: '|' | first }}
                        {%- endif -%}
                      </a>
                    </div>
                  </div>
                  {%- endif -%}
                </div>
              </div>
              <style>
                {%- if block.settings.box_style == 'bg-hover' -%}
                #infobox-{{block.id}}:hover {
                  background-color: {{block.settings.background_color_hover}} !important;
                }
                {%- endif -%}
                {%- if block.settings.icon_type == 'text' and block.settings.icon_text_color != blank -%}
                #infobox-{{block.id}} .with-text {
                  color: {{block.settings.icon_text_color}} !important;
                }
                {%- endif -%}
                {%- if block.settings.icon_style == 'with-border' and block.settings.icon_border_color != blank -%}
                #infobox-{{block.id}} .info-box-icon {
                  border-color: {{block.settings.icon_border_color}} !important;
                }
                {%- endif -%}
                {%- if block.settings.icon_style == 'with-border' and block.settings.icon_border_hover_color != blank -%}
                #infobox-{{block.id}}:hover .info-box-icon {
                  border-color: {{block.settings.icon_border_hover_color}} !important;
                }
                {%- endif -%}
                {%- if block.settings.icon_style == 'with-bg' and block.settings.icon_background_color != blank -%}
                #infobox-{{block.id}} .info-box-icon {
                  background-color: {{block.settings.icon_background_color}} !important;
                }
                {%- endif -%}
                {%- if block.settings.icon_style == 'with-bg' and block.settings.icon_background_hover_color != blank -%}
                #infobox-{{block.id}}:hover .info-box-icon {
                  background-color: {{block.settings.icon_background_hover_color}} !important;
                }
                {%- endif -%}
                .vc_custom_{{block.id}}5 {
                  {%- if block.settings.box_background_color != blank -%}
                  background-color: {{block.settings.box_background_color}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_background_image != blank -%}
                  background-image: url({{block.settings.box_background_image | img_url: 'master' }}) !important;
                  background-position: {{block.settings.box_background_position | replace: '_', ' ' }} !important;
                  background-repeat: no-repeat !important;
                  background-size: {{block.settings.box_background_size}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_border_integer != blank -%}
                  border-width: {{block.settings.box_border_integer | remove: ' ' | split: '-' | join: ' '}} !important;
                  border-color: {{block.settings.box_border_color}} !important;
                  border-style: {{block.settings.box_border_style}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_margin_top != blank -%}
                  margin-top: {{block.settings.box_margin_top | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_margin_right != blank -%}
                  margin-bottom: {{block.settings.box_margin_right | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_margin_bottom != blank -%}
                  margin-bottom: {{block.settings.box_margin_bottom | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_margin_left != blank -%}
                  margin-bottom: {{block.settings.box_margin_left | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_padding_top != blank -%}
                  padding-top: {{block.settings.box_padding_top | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_padding_right != blank -%}
                  padding-right: {{block.settings.box_padding_right | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_padding_bottom != blank -%}
                  padding-bottom: {{block.settings.box_padding_bottom | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                  {%- if block.settings.box_padding_left != blank -%}
                  padding-left: {{block.settings.box_padding_left | remove: 'px' | append: 'px'}} !important;
                  {%- endif -%}
                }
              </style>
            </div> 
            {%- endfor -%} 
            </div>
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  {%- if section.settings.section_layout != '0' -%}
  <div class="vc_row-full-width vc_clearfix"></div>
  {%- endif -%}
  <style>
    .vc_custom_{{section.id}} { 
      border-top-width: 0px !important; 
      {%- if section.settings.background_image != blank -%}
      background-image: url({{section.settings.background_image | img_url: 'master'}}) !important;
      background-position: {{section.settings.background_position | replace: '_', ' ' }} !important;
      background-repeat: {{section.settings.background_image_repeat}} !important;
      background-size: {{section.settings.background_size}} !important;
      background-attachment: {{section.settings.background_attachment}} !important;
      {%- endif -%}
      background-color: {{section.settings.background_color}};
    }   
  </style>
</div>
