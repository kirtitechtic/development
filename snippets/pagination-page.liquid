<div class="shopify-pagination">
  <ul class="page-numbers">
    {% if paginate.previous %}
    <li>
      <a class="prev page-numbers" href="{{ paginate.previous.url }}" title="{{ 'collections.general.previous' | t }}"  {% if settings.language_enable %}data-translate="collections.general.previous" translate-item="title"{% endif %}>←</a>
    </li> 
    {% endif %} 
    {% for part in paginate.parts %}
    {% if part.is_link %}
    <li>
      <a class="page-numbers" href="{{ part.url }}">{{ part.title }}</a>
    </li>
    {% else %}
    {% if part.title == paginate.current_page %}
    <li class="active"><span class="page-numbers current">{{ part.title }}</span></li>
    {% else %}
    <li><span class="page-numbers">{{ part.title }}</span></li>
    {% endif %}
    {% endif %}
    {% endfor %} 
    {% if paginate.next %}
    <li>
      <a class="next page-numbers" href="{{ paginate.next.url }}" title="{{ 'collections.general.next' | t }}"  {% if settings.language_enable %}data-translate="collections.general.next" translate-item="title"{% endif %}>→</a>
    </li> 
    {% endif %}
  </ul> 
</div>